{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "removeComments": true,
    "sourceMap": false,
    "declarationMap": false,
    "verbatimModuleSyntax": false,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dist",
    "output",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "vitest.config.ts"
  ]
}
