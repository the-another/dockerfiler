# Environment Variables for PHP 7.4 Alpine Linux Container
# Copy this file to .env and modify as needed

# PHP Configuration
FOR_WORDPRESS=true
FOR_LARAVEL=true
WITH_XDEBUG=false

# Container Configuration
IMAGE_NAME=alpine-php-7.4
IMAGE_TAG=latest
CONTAINER_NAME=php-7.4-container

# Port Configuration
PHP_FPM_PORT=9000

# Volume Configuration
APP_VOLUME=./app:/home/another/app

# Development Configuration
DEBUG_MODE=false
LOG_LEVEL=error

# Security Configuration
NON_ROOT_USER=another
NON_ROOT_GROUP=another
NON_ROOT_UID=1000
NON_ROOT_GID=1000

# Performance Configuration
PHP_MEMORY_LIMIT=128M
PHP_MAX_EXECUTION_TIME=30
PHP_MAX_INPUT_TIME=30
PHP_POST_MAX_SIZE=8M
PHP_UPLOAD_MAX_FILESIZE=2M

# OPcache Configuration
OPCACHE_ENABLE=true
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_MAX_ACCELERATED_FILES=4000

# PHP-FPM Configuration
PHP_FPM_MAX_CHILDREN=50
PHP_FPM_START_SERVERS=5
PHP_FPM_MIN_SPARE_SERVERS=5
PHP_FPM_MAX_SPARE_SERVERS=35
PHP_FPM_MAX_REQUESTS=1000
