# Docker Hub Configuration for Multi-Architecture Builds
# Copy this file to dockerhub.env and fill in your credentials

# Docker Hub Credentials
DOCKER_USERNAME=
DOCKER_PAT=

# Registry Configuration
DOCKER_REGISTRY=docker.io

# Image Configuration
IMAGE_NAME=nginx-php-fpm
IMAGE_TAG=fpm-7.4-alpine

# Multi-Architecture Settings
PLATFORMS=linux/amd64,linux/arm64
BUILDX_BUILDER=multiarch-builder

# Build Options
PUSH_TO_REGISTRY=true
CREATE_MANIFEST=true
