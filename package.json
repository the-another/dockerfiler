{
  "name": "dockerfile-generator-cli",
  "version": "0.1.0",
  "description": "Pure TypeScript CLI tool for generating hardened, multi-architecture Docker images for web server setups with Nginx and PHP",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "dockerfile-generator": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.dev.json --watch",
    "start": "node dist/cli/index.js",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "format:check": "prettier --check src/**/*.ts tests/**/*.ts",
    "type-check": "tsc --noEmit",
    "type-check:test": "tsc -p tsconfig.test.json --noEmit",
    "clean": "rm -rf dist node_modules/.cache",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "docker",
    "dockerfile",
    "nginx",
    "php",
    "cli",
    "typescript",
    "multi-architecture",
    "security",
    "hardening"
  ],
  "author": "Nemanja Cimbaljevic<admin@the-another.org>",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "dockerfile-generator": "^5.0.3",
    "fs-extra": "^11.3.1",
    "joi": "^18.0.1",
    "js-yaml": "^4.1.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "chalk": "^4.1.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
